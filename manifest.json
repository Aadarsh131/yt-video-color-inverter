{
  "manifest_version": 3,
  "name": "YouTube Video Color Inverter",
  "version": "1.0",
  "description": "Dynamically inverts colors for YouTube videos.",
  "permissions": ["scripting"],
  "host_permissions": ["https://www.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Toggle Video Color"
  },
  "icons": {
  "16": "/icons/dropper_16x16.png",
  "32": "/icons/dropper_32x32.png",
  "128": "/icons/dropper_128x128.png"
}
}

